{
  "multipart": [
    {
      "when": {
        "facing": "north",
        "post_part": "lower"
      },
      "apply": {
        "model": "swem:block/western_hitching_post_lower"
      }
    },
    {
      "when": {
        "facing": "north",
        "post_part": "upper"
      },
      "apply": {
        "model": "swem:block/western_hitching_post_upper"
      }
    },
    {
      "when": {
        "facing": "east",
        "post_part": "lower"
      },
      "apply": {
        "model": "swem:block/western_hitching_post_lower",
        "y": 90
      }
    },
    {
      "when": {
        "facing": "east",
        "post_part": "upper"
      },
      "apply": {
        "model": "swem:block/western_hitching_post_upper",
        "y": 90
      }
    },
    {
      "when": {
        "facing": "south",
        "post_part": "lower"
      },
      "apply": {
        "model": "swem:block/western_hitching_post_lower",
        "y": 180
      }
    },
    {
      "when": {
        "facing": "south",
        "post_part": "upper"
      },
      "apply": {
        "model": "swem:block/western_hitching_post_upper",
        "y": 180
      }
    },
    {
      "when": {
        "facing": "west",
        "post_part": "lower"
      },
      "apply": {
        "model": "swem:block/western_hitching_post_lower",
        "y": 270
      }
    },
    {
      "when": {
        "facing": "west",
        "post_part": "upper"
      },
      "apply": {
        "model": "swem:block/western_hitching_post_upper",
        "y": 270
      }
    },
    {
      "when": {
        "enabled": true,
        "post_part": "upper",
        "facing": "north"
      },
      "apply": {
        "model": "swem:block/rope_knot"
      }
    },
    {
      "when": {
        "enabled": true,
        "post_part": "upper",
        "facing": "east"
      },
      "apply": {
        "model": "swem:block/rope_knot",
        "y": 90
      }
    },
    {
      "when": {
        "enabled": true,
        "post_part": "upper",
        "facing": "south"
      },
      "apply": {
        "model": "swem:block/rope_knot",
        "y": 180
      }
    },
    {
      "when": {
        "enabled": true,
        "post_part": "upper",
        "facing": "west"
      },
      "apply": {
        "model": "swem:block/rope_knot",
        "y": 270
      }
    }
  ]
}