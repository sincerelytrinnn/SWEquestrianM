{
  "multipart": [
    {
      "when": {
        "side": "left",
        "facing": "north"
      },
      "apply": {
        "model": "swem:block/panel_arrow_outer_red"
      }
    },
    {
      "when": {
        "side": "left",
        "facing": "east"
      },
      "apply": {
        "model": "swem:block/panel_arrow_outer_red",
        "y": 90
      }
    },
    {
      "when": {
        "side": "left",
        "facing": "south"
      },
      "apply": {
        "model": "swem:block/panel_arrow_outer_red_flipped",
        "y": 0
      }
    },
    {
      "when": {
        "side": "left",
        "facing": "west"
      },
      "apply": {
        "model": "swem:block/panel_arrow_outer_red_flipped",
        "y": 90
      }
    },

    {
      "when": {
        "side": "middle",
        "facing": "north|south"
      },
      "apply": {
        "model": "swem:block/panel_arrow_middle_red"
      }
    },
    {
      "when": {
        "side": "middle",
        "facing": "east|west"
      },
      "apply": {
        "model": "swem:block/panel_arrow_middle_red",
        "y": 90
      }
    },

    {
      "when": {
        "side": "right",
        "facing": "north|south"
      },
      "apply": {
        "model": "swem:block/panel_arrow_middle_red"
      }
    },
    {
      "when": {
        "side": "right",
        "facing": "east|west"
      },
      "apply": {
        "model": "swem:block/panel_arrow_middle_red",
        "y": 90
      }
    }
  ]
}